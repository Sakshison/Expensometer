<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".homescreen">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="@color/fam1_blue"
            android:text="MyMoney"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <ImageButton
            android:id="@+id/profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_baseline_account_circle_24" />

        <Button
            android:id="@+id/record"
            android:layout_width="220dp"
            android:layout_height="45dp"
            android:layout_marginTop="56dp"
            android:background="@color/fam1_blue"
            android:text="Record"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <Button
            android:id="@+id/budget"
            android:layout_width="220dp"
            android:layout_height="45dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="56dp"
            android:background="@color/fam1_blue"
            android:text="Budget"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="120dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/record"
            android:padding="30dp"
            android:text="INCOME"
            android:textSize="40dp" />

        <Spinner
            android:id="@+id/month"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="325dp"
            android:entries="@array/Month"
            android:theme="@style/spinnerstyle" />

        <Spinner
            android:id="@+id/year"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="325dp"
            android:entries="@array/Year"
            android:theme="@style/spinnerstyle" />

        <EditText
            android:id="@+id/income"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="230dp"
            android:background="@drawable/edittext"
            android:hint="Add your monthly income here"
            android:padding="10dp"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="370dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/record"
            android:inputType="numberDecimal"
            android:padding="30dp"
            android:text="SAVINGS"
            android:textSize="40dp" />

        <EditText
            android:id="@+id/savings"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="470dp"
            android:background="@drawable/edittext"
            android:hint="Add your monthly Savings here"
            android:padding="10dp"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/nextexpense"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="570dp"
            android:background="@drawable/ic_baseline_next_plan_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="620dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/record"
            android:padding="30dp"
            android:text="EXPENSE"
            android:textSize="40dp" />

        <EditText
            android:id="@+id/expense"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="720dp"
            android:background="@drawable/edittext"
            android:hint="Add your monthly expense here"
            android:padding="10dp"
            android:textSize="20dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/save"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="750dp"
            android:backgroundTint="@color/fam2_blue" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/fam1_blue"
            android:layout_marginTop="850dp"/>

        <ImageButton
            android:id="@+id/home"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="870dp"
            android:background="@drawable/ic_baseline_home_24" />

        <ImageButton
            android:id="@+id/category"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="870dp"
            android:background="@drawable/ic_baseline_category_24" />

        <ImageButton
            android:id="@+id/analysis"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginLeft="400dp"
            android:layout_marginTop="870dp"
            android:background="@drawable/ic_baseline_analytics_24" />
    </RelativeLayout>
</ScrollView>