<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_profile"
    android:background="@color/fam_grey"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/grey"
            android:text="User Profile"
            android:textSize="30dp" />

        <ImageButton
            android:id="@+id/save"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:alpha="0.1"
            android:background="@drawable/ic_baseline_check_24"/>

        <TextView
            android:id="@+id/un1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="140dp"
            android:text="User Name"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/et1"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/edittext"
            android:inputType="textPersonName"
            android:textColor="@color/black" />

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/profile" />

        <TextView
            android:id="@+id/ue1"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="260dp"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="260dp"
            android:background="@drawable/ic_baseline_email_24" />

        <EditText
            android:id="@+id/et2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="320dp"
            android:layout_marginRight="10dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittext"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/ue"
            android:layout_width="500dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="440dp"
            android:text="CHANGE PASSWORD:-"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/cpn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="550dp"
            android:text="Password(New)"
            android:textColor="@color/black"
            android:textSize="30dp" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_baseline_lock_24"
            android:layout_marginTop="550dp"
            android:layout_marginLeft="220dp"/>

        <EditText
            android:id="@+id/et3"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="600dp"
            android:background="@drawable/edittext"
            android:inputType="textPassword"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/cp1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="650dp"
            android:text="Confirm Password"
            android:textColor="@color/black"
            android:textSize="30dp" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_baseline_lock_24"
            android:layout_marginTop="650dp"
            android:layout_marginLeft="260dp"/>

        <EditText
            android:id="@+id/et4"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="700dp"
            android:background="@drawable/edittext"
            android:inputType="textPassword"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/userlogout"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="800dp"
            android:background="@color/red"
            android:text="LOGOUT"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <Button
            android:id="@+id/deleteaccount"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="870dp"
            android:background="@color/fam_grey"
            android:text="Delete Account"
            android:textColor="@color/red"
            android:textSize="30dp" />
    </RelativeLayout>
</ScrollView>